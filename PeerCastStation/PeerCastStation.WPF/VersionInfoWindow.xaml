<Window x:Class="PeerCastStation.WPF.VersionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="バージョン情報" Height="380" Width="420"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="16">
        <Button DockPanel.Dock="Bottom" Margin="0,13,0,0" HorizontalAlignment="Right"
                Width="70" Height="23" Content="閉じる" Click="Button_Click"/>
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ファイル" Width="200"
                                DisplayMemberBinding="{Binding FileName}"/>
                    <GridViewColumn Header="バージョン"  Width="60"
                                DisplayMemberBinding="{Binding Version}"/>
                    <GridViewColumn Header="アセンブリ名" Width="60"
                                DisplayMemberBinding="{Binding AssemblyName}"/>
                    <GridViewColumn Header="著作権" Width="60"
                                DisplayMemberBinding="{Binding Copyright}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
