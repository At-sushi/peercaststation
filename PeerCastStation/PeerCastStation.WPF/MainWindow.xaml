<Window x:Class="PeerCastStation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:PeerCastStation.Gui"
        Title="PeerCastStation" Height="600" Width="460">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <Label Content="ポート: "/>
            <TextBlock Text="{Binding PortStatus}"/>
        </StatusBar>
        <TabControl>
            <TabItem Header="ログ">
                <Grid>
                    <l:Log DataContext="{Binding Log}"/>
                    <Button HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Margin="3" Width="100" Height="23" Click="Button_Click"
                            Content="バージョン情報..."/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
